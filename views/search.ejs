  <!--search page form allows user to search -->
  <body class="bg-search">
    <div class="container mt-5">
      <h1>search</h1>
      <form action="search_result" method="GET">
        <p>Search to view movies we have in stock and quantity available</p>
        <div class="input-group mb-4">
          <input
            id="search_box"
            type="text"
            class="form-control"
            name="search_text"
          />
          <input type="submit" class="btn btn-primary" value="Search" />
        </div>
      </form>
    </div>
  </body>
</html>
